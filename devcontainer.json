{
  "name": "Miyan Development Container",
  "ports": [
    {
      "name": "Miyan-Api",
      "port": 5000,
      "onOpen": "ignore",
      "visibility": "public"
    },
    {
      "name": "Miyan-Telegram",
      "port": 3000,
      "onOpen": "ignore",
      "visibility": "public"
    }
  ],
  "tasks": {
    "shell": [
      {
        "name": "Miyan-NodeJs",
        "command": "chmod 755 node.sh && sh node.sh"
      },
      {
        "name": "Miyan-Python",
        "command": "chmod 755 python.sh && sh python.sh"
      },
      {
        "name": "Miyan-Github",
        "command": "chmod 755 git-pull.sh && watch -n 1 sh git-pull.sh"
      },
      {
        "name": "Miyan-Package",
        "command": "chmod 755 package.sh && sh package.sh"
      }
    ]
  }
}